name: Test Dockerfile (no push)

on:
  push:
    branches:
      - test_docker
  pull_request:
    branches:
      - test_docker

jobs:
  test-dockerfile:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Build image (no push)
        run: |
          docker buildx build \
            --platform linux/amd64 \
            --load \
            -t openqp/openqp:test \
            .

      - name: Smoke test: openqp version
        run: |
          docker run --rm openqp/openqp:test openqp --version
